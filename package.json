{
  "name": "indexeddb-orm",
  "version": "4.0.0-alpha.3",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/indexeddb-orm-lib.cjs.js",
      "import": "./dist/indexeddb-orm-lib.es.js"
    }
  },
  "scripts": {
    "clean": "rimraf lib && rimraf dist",
    "build": "npm-run-all clean tsc esbuild",
    "build:watch": "npm-run-all -p tsc:watch esbuild:watch",
    "esbuild": "node esbuild.config.mjs",
    "esbuild:watch": "ESBUILD_WATCH=true node esbuild.config.mjs",
    "tsc": "tsc",
    "tsc:watch": "tsc -w",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "watch": "rimraf dist && tsc -p tsconfig.build.json --watch",
    "prepublish": "npm run build"
  },
  "author": "Max Gaurav max.gaurav@rubicotech.in",
  "description": "A promise based ORM wrapper for indexedDB",
  "devDependencies": {
    "@esbuild-plugins/node-resolve": "^0.1.4",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "esbuild": "^0.14.44",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "glob": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3"
  },
  "files": [
    "/dist"
  ],
  "keywords": [
    "indexeddb",
    "indexed-db",
    "browser",
    "database"
  ],
  "bugs": {
    "url": "https://github.com/maxgaurav/indexeddb-orm/issues",
    "email": "max.gaurav@rubicotech.net"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maxgaurav/indexeddb-orm.git"
  },
  "license": "MIT"
}
