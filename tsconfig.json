{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "ES2020",
    ],
    "module": "es6",
    "moduleResolution": "classic",
    "sourceMap": true,
    "target": "ES2019",
    "allowJs": false,
    "strict": true,
    "outDir": "dist",
    "declarationDir": "./dist",
    "incremental": true,
    "emitDeclarationOnly": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "other"
  ],
  "compileOnSave": true
}
